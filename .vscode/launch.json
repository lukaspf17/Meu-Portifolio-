    "version": "0.2.0",
    "configurations": [
        {
            "type": "AutoLuaDebugger",
            "name": "AutoLua Debugger Launch",
            "request": "launch",
            "startFile": "${file}"
        },
        
        {
            "name": "(gdb) Iniciar",
            "type": "",
            "request": "launch",
            "program": "insira o nome do programa, por exemplo ${workspaceFolder}/a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}